# Example environment configuration for HumAIne Swarm Assistant
# Copy this file to env.sh and fill in your actual values
# DO NOT commit env.sh with real credentials to version control

# OpenAI API Configuration
export OPENAI_API_KEY=your-openai-api-key

# Pinecone Vector Database
export PINECONE_API_KEY=pour-pinecone-api-key

# Keycloak OAuth Configuration for Chainlit
export OAUTH_KEYCLOAK_CLIENT_ID="minio"
export OAUTH_KEYCLOAK_CLIENT_SECRET="your-keycloak-client-id"
export OAUTH_KEYCLOAK_REALM="humaine"
export OAUTH_KEYCLOAK_BASE_URL="https://keycloak.humaine-horizon.eu"
export OAUTH_KEYCLOAK_NAME="keycloak"

# MinIO Configuration
export MINIO_ENDPOINT="s3-minio.humaine-horizon.eu"
export MINIO_SECURE="true"

# Kubeflow Configuration (TODO: base URL only - user credentials via OAuth)
export KUBEFLOW_HOST="http://huanew-kubeflow.ddns.net/pipeline"

# Logging Configuration
# Valid values: DEBUG, INFO, WARNING, ERROR, CRITICAL
export LOG_LEVEL="ERROR"

# Set Python path to current directory
export PYTHONPATH=$(pwd)

echo "Environment configured. MinIO credentials will be fetched per-user via OAuth."
